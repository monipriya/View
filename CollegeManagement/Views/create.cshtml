@model CollegeDetail.Entity.Detail

@{
    ViewBag.Title = "create";
}

<h2>create</h2>

@using (Html.BeginForm("Create", "Package", FormMethod.Post))
{
    <table cellpadding="10">
        <tr>
            <td>
                @Html.Label("College code")
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.collegeCode)
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(Model => Model.collegeName)</td>
            <td>@Html.EditorFor(Model => Model.collegeName)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(Model => Model.collegeRank)</td>
            <td>@Html.EditorFor(Model => Model.collegeRank)</td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Back to list", "Index")
            </td>
            <td>
                <input type="submit" id="Add" />
            </td>
        </tr>
    </table>
}
